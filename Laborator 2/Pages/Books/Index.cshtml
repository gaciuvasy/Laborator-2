@page
@model Laborator_2.Pages.Books.IndexModel

@{
    ViewData["Title"] = "Index";
}

@if (TempData["Message"] != null)
{
    <div id="msg" class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div id="err" class="alert alert-danger">@TempData["Error"]</div>
}

@section Scripts {
    <script>

        setTimeout(() => {
            const msg = document.getElementById('msg');
            if (msg) {
                msg.style.transition = "opacity 0.6s ease";
                msg.style.opacity = "0";
                setTimeout(() => msg.remove(), 200);
            }

            const err = document.getElementById('err');
            if (err) {
                err.style.transition = "opacity 0.6s ease";
                err.style.opacity = "0";
                setTimeout(() => err.remove(), 200);
            }
        }, 3000);
    </script>
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary btn-sm me-1">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book[0].Price)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Book[0].PublishingDate)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Book[0].Publisher.PublisherName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Book) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishingDate)
             </td>
                <td>
                    <a asp-page="/Publishers/Details" asp-route-id="@item.PublisherID" class="text-decoration-none link-primary">
                        @item.Publisher?.PublisherName
                    </a>
                </td>
            <td>
             <a asp-page="./Edit" asp-route-id="@item.ID" class="btn btn-primary btn-sm me-1">Edit</a>
             <a asp-page="./Details" asp-route-id="@item.ID" class="btn btn-primary btn-sm me-1">Details</a>
             <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-primary btn-sm me-1">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
